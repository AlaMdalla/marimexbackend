{
    "version": 2,
    "builds": [
      {
        "src": "src/server.ts",
        "use": "@vercel/node"
      }
    ],
    "env": {
      "MONGO_URI": "@your-mongo-uri",
      "API_KEY": "@your-api-key"
    },
    "routes": [
      { "src": "/api/(.*)", "dest": "src/server.ts" }
    ],
    "headers": [
      { "source": "/(.*)", "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }] }
    ]
  }
  